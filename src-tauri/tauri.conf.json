{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build && npm run export",
    "devPath": "http://localhost:3000",
    "distDir": "../out",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "game-stats-client",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "scope": [
          {
            "name": "mac-process-command",
            "cmd": "ps x -o args | grep 'LeagueClientUx'"
          },
          {
            "name": "win-process-command",
            "cmd": "WMIC PROCESS WHERE name='LeagueClientUx.exe' GET commandline"
          }
        ]
      },
      "fs": {
        "all": true,
        "scope": [
          "**"
        ]
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      },
      "http": {
        "request": true,
        "scope": [
          "http://localhost:3001/api/*",
          "https://*.riotgames.com/*",
          "https://*.ngrok.io/*",
          "https://localhost:2999/*",
          "https://ddragon.leagueoflegends.com/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "game-stats-client",
        "width": 800,
        "height": 600
      }
    ]
  }
}
